<h1>Editing Book</h1>
  <%= form_for(@book) do |f| %>

    <% if @book.errors.any? %>
      <%= @book.errors.count %>errors
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end%>

      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Body</h4>
        <%= f.text_area :body %>
        <%= f.submit "Update Book" %>
  <% end %>

    <%= link_to "Show", book_path(@book) %>
    |
    <%= link_to "Back", books_path %>